                        img {
                            //@include transition-1;
                            opacity: 0.75;
                        }
                    }

                    &:last-of-type {
                        margin-top: 0 !important;
                    }
                }

                .active {

                    img {
                        //@include transition-1;
                        opacity: 0.75;
                    }
                }
            }
        }
    }

    &.is-transition-overlap, &.is-transition-push {
        z-index: 1111111111;

        ul {

            li {

                a {
                    opacity: 0;
                    //@include transition-1;
                }
            }
        }

        &.is-closed {

        }

        &.is-open {
            //box-shadow: none;

            ul {

                li {

                    a {
                        opacity: 1;
                        //@include transition-2;
                    }
                }
            }
        }
    }
}




